generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LlmRequest {
  id           String   @id @default(uuid())
  workspaceId  String
  userId       String
  model        String
  taskType     String
  tokensIn     Int      @default(0)
  tokensOut    Int      @default(0)
  latencyMs    Int      @default(0)
  policyId     String?
  externalMode Boolean  @default(false)
  createdAt    DateTime @default(now())
}

model OutboxEvent {
  id         String   @id @default(uuid())
  topic      String
  payload    Json
  createdAt  DateTime @default(now())
  publishedAt DateTime?
}
